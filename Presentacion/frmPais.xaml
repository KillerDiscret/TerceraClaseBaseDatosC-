<Window x:Class="Presentacion.frmPais"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="frmPais" Height="300" Width="300">
    <Grid Margin="0,0,-52,0">
        <Label x:Name="label" Content="Nombre" HorizontalAlignment="Left" Margin="17,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.767,1.154"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="23" Margin="94,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Registrar" HorizontalAlignment="Left" Margin="17,95,0,0" VerticalAlignment="Top" Width="54" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="Modificar" HorizontalAlignment="Left" Margin="94,95,0,0" VerticalAlignment="Top" Width="75" Click="button_Copy_Click"/>
        <Button x:Name="button_Copy1" Content="Eliminar" HorizontalAlignment="Left" Margin="204,95,0,0" VerticalAlignment="Top" Width="75"/>
        <DataGrid x:Name="dgpaises" HorizontalAlignment="Left" Margin="28,153,0,0" VerticalAlignment="Top" Height="96" Width="236" SelectionChanged="dgpaises_SelectionChanged"/>

    </Grid>
</Window>
